@model BP.WebUI.Areas.Admin.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<p>@Html.ValidationSummary()</p>
@using (Html.BeginForm("EditUser", "Users"))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.Id)
        <label>@Resources.Resource.Email</label>
        @if (string.IsNullOrEmpty(Model.Email))
        {
            <div>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
        }
        else
        {
            <h4>@Model.Email</h4>
            @Html.Hidden("Email", Model.Email)
        }
    </div>
    <div class="form-group">
        <label>@Resources.Resource.Password</label>
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Role</label>
        @Html.DropDownListFor(x => x.Role, Roles.GetAllRoles()
            .Select(x => new SelectListItem { Text = x, Value = x }))
    </div>
    <button type="submit" class="btn btn-primary">@Resources.Resource.ButtonSubmit</button>
    @Html.ActionLink(Resources.Resource.ButtonCancel, "Index", null, new { @class = "btn btn-default" })
}

