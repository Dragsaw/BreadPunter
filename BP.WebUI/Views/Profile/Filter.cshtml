@model BP.WebUI.Models.FilterViewModel

@{
    ViewBag.Title = Resources.Resource.FilterCreation;
}

<h2>@Resources.Resource.FilterCreation</h2>

@using (Html.BeginForm("Filter", "Profile"))
{
    <div class="row">
        @for (int i = 0; i < Model.Skills.Count; i++)
        {
            <div class="col-md-4">
                @Html.HiddenFor(x => x.Id)
                <div class="form-group">
                    <label>
                        @Model.Skills[i].Skill.Name
                    </label>
                    <br />
                    @Html.TextBoxFor(x => x.Skills[i].Level, new { @class = "rt", type = "number" })
                    @Html.HiddenFor(x => x.Skills[i].Skill.Id)
                    @Html.HiddenFor(x => x.Skills[i].Skill.Name)
                </div>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">@Resources.Resource.ButtonSubmit</button>
    @Html.ActionLink(Resources.Resource.ButtonCancel, "Index", "Profile")
}

@section Scripts
{
    <script type="text/javascript">
        $(".rt").rating({
            'min': 0, 'max': 4, 'step': 1, 'size': 'sm', 'stars': 4,
            'clearCaption': "@Resources.Resource.NotRated",
            'starCaptions': {
                0: "@Resources.Resource.NotRated",
                1: "@Resources.Resource.Novice",
                2: "@Resources.Resource.Intermediate",
                3: "@Resources.Resource.Advanced",
                4: "@Resources.Resource.Expert"
            }
        });
    </script>
}