@model BP.BLL.Interface.Entities.Users.BllProgrammer

@{
    ViewBag.Title = Resources.Resource.Profile;
}

<h2>Profile</h2>

<div class="panel panel-primary">
    <div class="panel-heading">@Model.Name (<a href="mailto:@Model.Email" style="color:white;">@Model.Email</a>)</div>
    <div class="panel-body">
        <div class="container">
            <div class="row">
                <img src="@Url.Action("GetPhoto", new { id = Model.Id})" alt="" class="pull-left" style="max-width: 40%; max-height: 30vh;" />
                <div class="col-md-8">
                    <h3 style="display : inline">@Model.Name </h3>
                    @if (User.Identity.Name == Model.Email)
                    {
                        <span>[@Html.ActionLink(Resources.Resource.ButtonEdit, "EditInfo")]</span>
                    }
                    <hr />
                    <h4>@Resources.Resource.Birthday:</h4>
                    <p class="text-left">@(Model.BirthDate.HasValue ? ((DateTime)Model.BirthDate).ToShortDateString() : Resources.Resource.NotSpecified)</p>
                    <h4>@Resources.Resource.AboutMe:</h4>
                    <p class="text-left">@(Model.About ?? Resources.Resource.NotSpecified)</p>
                </div>
            </div>
        </div>
        <br />
        <h3 style="display : inline">@Resources.Resource.Skills </h3>
        @if (User.Identity.Name == Model.Email)
        {
            <span>[@Html.ActionLink(Resources.Resource.ButtonEdit, "EditSkills")]</span>
        }
        <hr />
        <div class="row">
            @foreach (var skill in Model.Skills)
            {
                <div class="col-md-4">
                    <h4>@skill.Key.Name</h4>
                    <input type="number" class="rt" value="@skill.Value" data-disabled="true" data-showClear="false"/>
                </div>
            }
            @if (Model.Skills.Count == null)
            {
                @Resources.Resource.NoSkills
            }
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(".rt").rating({
            'min': 0, 'max': 4, 'step': 1, 'size': 'sm', 'stars': 4,
            'clearCaption': "@Resources.Resource.NotRated",
            'starCaptions': {
                0: "@Resources.Resource.NotRated",
                1: "@Resources.Resource.Novice",
                2: "@Resources.Resource.Intermediate",
                3: "@Resources.Resource.Advanced",
                4: "@Resources.Resource.Expert"
            }
        });
    </script>
}