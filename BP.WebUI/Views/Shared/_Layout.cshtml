<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/star-rating.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")" style="padding:7px 0px 0px 5px">
                    <img src="~/Content/Images/Aibj8nLbT.svg" alt="Bread Punter home page" width="60" />
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Bread Punter", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink(Context.User.Identity.Name, "Index", "Profile", null, null)</li>
                        <li>@Html.ActionLink(Resources.Resource.ButtonSignOut, "Logoff", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink(Resources.Resource.ButtonSignIn, "Login", "Account")</li>
                    }
                </ul>
                @if (User.IsInRole("Manager"))
                {
                    <ul class="nav navbar-nav pull-right">
                        <li>@Html.ActionLink(Resources.Resource.ButtonView, "Browse", "Profile")</li>
                    </ul>
                }
            </div>
        </div>
    </div>

    <div class="container body-content" style="min-height:90vh;">
        @RenderBody()
        <hr />
        <footer>
            <div class="pull-right">@Html.Action("Language", "Home", null)</div>
            <p>&copy; @DateTime.Now.Year - Bread Punter</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/star-rating.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>