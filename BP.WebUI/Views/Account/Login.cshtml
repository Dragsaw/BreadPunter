@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm(new { returnUrl = Request.Params["returnUrl"] }))
        {
            @Html.AntiForgeryToken()
            <h4 class="text-danger">@Html.ValidationSummary()</h4>
            <div class="form-group">
                <label>@Resources.Resource.Email</label>
                @Html.TextBox("email", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>@Resources.Resource.Password</label>
                @Html.Password("password", null, new { @class = "form-control" })
            </div>
            <div class="form-group checkbox">
                <label>
                    @Html.CheckBox("remember", new { @class = "" })
                    @Resources.Resource.RememberMe
                </label>
            </div>
            <button class="btn btn-primary" type="submit">@Resources.Resource.ButtonSignIn</button>
        }
    </div>
    <div class="col-md-6">
        <h3>@Resources.Resource.DontHaveAccount</h3>
        <div class="btn-group">
            @Html.ActionLink(Resources.Resource.ButtonProgrammerRegister, "Register", new { role = "Programmer" }, new { @class = "btn btn-primary" })
            @Html.ActionLink(Resources.Resource.ButtonManagerRegister, "Register", new { role = "Manager" }, new { @class = "btn btn-default" })
        </div>
    </div>
</div>